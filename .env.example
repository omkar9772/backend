# Database Configuration
DATABASE_URL=postgresql://admin:dev_password@localhost:5432/naad_bailgada

# JWT Authentication
JWT_SECRET_KEY=your_secret_key_here_minimum_32_characters_long
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Application Settings
ENVIRONMENT=development
DEBUG=True
API_V1_PREFIX=/api/v1
ADMIN_PREFIX=/api/v1/admin

# CORS Settings (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# File Upload
MAX_UPLOAD_SIZE_MB=10
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/jpg
UPLOAD_DIR=./uploads

# Google Cloud Platform (Production)
GCP_PROJECT_ID=naad-bailgada
CLOUD_STORAGE_BUCKET=naad-bailgada-media
GOOGLE_APPLICATION_CREDENTIALS=./gcp-credentials.json

# Cloud SQL (Production)
CLOUD_SQL_CONNECTION_NAME=naad-bailgada:asia-south1:naad-bailgada-db
USE_CLOUD_SQL=False

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100

# Admin User (Initial Setup)
INITIAL_ADMIN_USERNAME=admin
INITIAL_ADMIN_EMAIL=admin@naadbailgada.com
INITIAL_ADMIN_PASSWORD=change_me_in_production
